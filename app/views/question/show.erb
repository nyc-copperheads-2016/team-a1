<h1><%= @question.text %></h1>

  <div class='question-container'>
    <form action='/responses' method='post'>
    <% @question.choices.each do |choice| %>

      <input type='radio' name='response[choice]' value="<%= choice.text %>"><%= choice.text %>
    <% end %>
    <br>
      <input type='submit' value='submit'>
    </form>
  </div>
