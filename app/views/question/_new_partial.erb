<h3><%= @survey.title %></h3>
<p><%= @survey.description %></p>

<form class="question-form" method="post" action='/questions'>
  <input class="input-field" type="text" name="question[text]" placeholder="Question text">
  <input type="hidden" name="question[survey_id]" value="<%= @survey.id %>">
  <input class='submit-btn question-submit-button' type="submit" value="Save question">
</form>




